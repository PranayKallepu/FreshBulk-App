
generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id      Int      @id @default(autoincrement())
  name  String
  price Float
}

model Order {
  id      Int      @id @default(autoincrement())               
  buyerName       String
  buyerContact    String
  deliveryAddress String
  items            Json
  status           String
  createdAt        DateTime @default(now())
}